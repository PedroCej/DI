<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal0.Vistas.Salir"
             BackgroundImageSource="{DynamicResource imagenFondo}"
             >

    
    <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="20">
        <Label Text="{DynamicResource SeguroSalir}" Style="{DynamicResource lblTitulo}"/>

            <Button x:Name="btnAceptar" Text="{DynamicResource Si}" Clicked="btnAceptar_Clicked" HeightRequest="40"/>
        <Button x:Name="btnCancel" Text="{DynamicResource No}" Clicked="btnCancel_Clicked" HeightRequest="40"/>
           
    </VerticalStackLayout>
    
</ContentPage>