<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal0.Vistas.Inicio"
             Title=""
             BackgroundImageSource="{DynamicResource imagenFondo}"
             >
    <ScrollView x:Name="miScroll" >
        <VerticalStackLayout >
            <SearchBar Margin="150,25,150,25" Placeholder="Busca aquÃ­..." HorizontalOptions="FillAndExpand" SearchButtonPressed="SearchBar_SearchButtonPressed"/>
            <Grid Padding="150,0,150,0" x:Name="gridObjetos" ColumnSpacing="20" HorizontalOptions="Center" ColumnDefinitions="*,*,*,*,*" RowDefinitions="*,*,*,*,*,*,*,*,*,*" RowSpacing="40"/>

            <StackLayout HorizontalOptions="FillAndExpand" Padding="0,20,0,20" BackgroundColor="#44A6ACAF">
                <HorizontalStackLayout   HorizontalOptions="Center">
                    <Button x:Name="btnAnterior" Text="Anterior"  Clicked="btnAnterior_Clicked"  CornerRadius="10" />
                    <Label x:Name="lblPagina"  VerticalTextAlignment="Center" Padding="10,0,10,0" HorizontalTextAlignment="Start"/>
                    <Button x:Name="btnSiguiente"  Text="Siguiente" Clicked="btnSiguiente_Clicked"  CornerRadius="10" Margin="0,0,4,0"/>
                </HorizontalStackLayout>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
