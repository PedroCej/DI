        </Grid>


        <Entry x:Name="txtUser" Placeholder="Usuario" HeightRequest="50" WidthRequest="400" FontSize="25" Margin="0,20,0,0"/>
        <Entry x:Name="txtPass" Placeholder="Contraseña" HeightRequest="50" WidthRequest="400" FontSize="25" IsPassword="True" Margin="0,20,0,0"/>
        <Entry x:Name="txtPass2" Placeholder="Repite contraseña" HeightRequest="50" WidthRequest="400" FontSize="25" IsPassword="True" Margin="0,20,0,40"/>



        <HorizontalStackLayout HorizontalOptions="Center">
            <Button Text="Confirmar" x:Name="btnConfirmar"
                    Pressed="btnConfirmar_Pressed"
                    Margin="0,0,20,0"
                    WidthRequest="200"/>
            <Button Text="Cancelar" x:Name="btnCancelar"
                    Pressed="btnCancelar_Pressed"
                    WidthRequest="200"/>
        </HorizontalStackLayout>


    </VerticalStackLayout>
    </ScrollView>
</ContentPage>