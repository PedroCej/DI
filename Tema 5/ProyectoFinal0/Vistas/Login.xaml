            <ImageButton x:Name="img4" Source="img_perfil_4.jpg" Opacity="0.4" Aspect="AspectFill" HeightRequest="100" WidthRequest="100" CornerRadius="50" Pressed="elegirFoto_Pressed" Grid.Row="0" Grid.Column="3" />
            <ImageButton x:Name="img5" Source="img_perfil_5.jpg" Opacity="0.4" Aspect="AspectFill" HeightRequest="100" WidthRequest="100" CornerRadius="50" Pressed="elegirFoto_Pressed" Grid.Row="0" Grid.Column="4" />

            <!-- Fila 2 -->
            <ImageButton x:Name="img6" Source="img_perfil_6.jpg" Opacity="0.4" Aspect="AspectFill" HeightRequest="100" WidthRequest="100" CornerRadius="50" Pressed="elegirFoto_Pressed" Grid.Row="1" Grid.Column="0" />
