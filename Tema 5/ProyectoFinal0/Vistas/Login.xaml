            <ImageButton x:Name="img8" Source="img_perfil_8.jpg" Opacity="0.4" Aspect="AspectFill" HeightRequest="100" WidthRequest="100" CornerRadius="50" Pressed="elegirFoto_Pressed" Grid.Row="1" Grid.Column="2" />
            <ImageButton x:Name="img9" Source="img_perfil_9.jpg" Opacity="0.4" Aspect="AspectFill" HeightRequest="100" WidthRequest="100" CornerRadius="50" Pressed="elegirFoto_Pressed" Grid.Row="1" Grid.Column="3" />
