             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal0.Vistas.Login"
             Title="Login">

    <ScrollView>
        <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center">



        <Grid RowSpacing="5" ColumnSpacing="5" Margin="0,0,0,20" RowDefinitions="*,*,*,*" ColumnDefinitions="*,*,*,*,*">



            <!-- Fila 1 -->
            <ImageButton x:Name="img1" Source="img_perfil_1.jpg" Opacity="0.4" Aspect="AspectFill" HeightRequest="100" WidthRequest="100" CornerRadius="50" Pressed="elegirFoto_Pressed" Grid.Row="0" Grid.Column="0" />
