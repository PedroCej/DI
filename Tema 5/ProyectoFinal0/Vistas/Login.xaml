            <ImageButton x:Name="img11" Source="img_perfil_11.jpg" Opacity="0.4" Aspect="AspectFill" HeightRequest="100" WidthRequest="100" CornerRadius="50" Pressed="elegirFoto_Pressed" Grid.Row="2" Grid.Column="0" />
            <ImageButton x:Name="img12" Source="img_perfil_12.jpg" Opacity="0.4" Aspect="AspectFill" HeightRequest="100" WidthRequest="100" CornerRadius="50" Pressed="elegirFoto_Pressed" Grid.Row="2" Grid.Column="1" />
            <ImageButton x:Name="img13" Source="img_perfil_13.jpg" Opacity="0.4" Aspect="AspectFill" HeightRequest="100" WidthRequest="100" CornerRadius="50" Pressed="elegirFoto_Pressed" Grid.Row="2" Grid.Column="2" />
