            <ImageButton x:Name="img17" Source="img_perfil_17.jpg" Opacity="0.4" Aspect="AspectFill" HeightRequest="100" WidthRequest="100" CornerRadius="50" Pressed="elegirFoto_Pressed" Grid.Row="3" Grid.Column="1" />
            <ImageButton x:Name="img18" Source="img_perfil_18.jpg" Opacity="0.4" Aspect="AspectFill" HeightRequest="100" WidthRequest="100" CornerRadius="50" Pressed="elegirFoto_Pressed" Grid.Row="3" Grid.Column="2" />
