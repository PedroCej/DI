<UserControl x:Class="WeatherApp.ControlesUsuario.Busqueda"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeatherApp.ControlesUsuario"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="5">
            <TextBox x:Name="txtCiudadBuscar" MinWidth="200"/>
            <Button x:Name="btnBuscar" Content="Buscar" HorizontalAlignment="Right" Click="btnBuscar_Click"/>
        </StackPanel>
        <ListBox x:Name="lstCiudadesEncontradas" Grid.Row="1" Margin="5" MouseDoubleClick="lstCiudadesEncontradas_MouseDoubleClick"></ListBox>

    </Grid>
</UserControl>
