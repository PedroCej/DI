<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoPruebas.NewPage2"
             Title="NewPage2">
    <VerticalStackLayout>
        <Label 
            Text="Esta pagina va despues del login"
            FontSize="Large"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="pass" WidthRequest="200" ></Entry>
        <HorizontalStackLayout Grid.Row="2">
            <Button  WidthRequest="200" Clicked="Button_Clicked" VerticalOptions="Start" Text="Conectar"></Button>
            <Button  WidthRequest="200" Clicked="Button_Clicked_1" VerticalOptions="Start" Text="Cancelar"></Button>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>